.blur{
  filter:blur(75px);
  -webkit-filter: blur(75px);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  align-self: center;
  z-index: -1;
}

